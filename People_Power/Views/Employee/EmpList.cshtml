@model IEnumerable<People_Power.Models.Employee>

<h2>Employee List</h2>

<a href="@Url.Action("EmpCreate", "Employee")" class="btn btn-primary mb-3">Create New Employee</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department.Name</td>
                <td>
                    <a href="@Url.Action("EmpEdit", "Employee", new { id = employee.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("EmpDelete", "Employee", new { id = employee.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
