@model People_Power.Models.Employee

<h2 class="text-center my-4">Create Employee</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg rounded-2xl p-4">
                <div class="card-body">
                    <form asp-action="EmpCreate" method="post">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                                <input asp-for="Name" class="form-control rounded-pill" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control rounded-pill" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                                <input asp-for="Phone" class="form-control rounded-pill" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <input asp-for="Address" class="form-control rounded-pill" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Position" class="form-label fw-bold">Position</label>
                                <input asp-for="Position" class="form-control rounded-pill" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfJoining" class="form-label fw-bold">Date of Joining</label>
                                <input asp-for="DateOfJoining" class="form-control rounded-pill" type="date" />
                                <span asp-validation-for="DateOfJoining" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Salary" class="form-label fw-bold">Salary</label>
                                <input asp-for="Salary" class="form-control rounded-pill" />
                                <span asp-validation-for="Salary" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DepartmentId" class="form-label fw-bold">Department</label>
                                <select asp-for="DepartmentId" class="form-select rounded-pill" asp-items="ViewBag.Departments"></select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-success rounded-pill shadow-sm">Create Employee</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
