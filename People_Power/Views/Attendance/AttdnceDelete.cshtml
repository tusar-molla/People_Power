@model People_Power.Models.Attendance

<h2>Delete Attendance</h2>

<p>Are you sure you want to delete this record?</p>

<div>
    <p><strong>Employee:</strong> @Model.Employee?.Name</p>
    <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
    <p><strong>Check-In:</strong> @Model.CheckInTime.ToShortTimeString()</p>
    <p><strong>Check-Out:</strong> @Model.CheckOutTime?.ToShortTimeString()</p>
    <p><strong>Approval Status:</strong> @Model.ApprovalStatus</p>
</div>

<form asp-action="AttdnceDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
