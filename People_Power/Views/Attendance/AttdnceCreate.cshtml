@model People_Power.Models.Attendance

<h2>Create Attendance</h2>

<form asp-action="AttdnceCreate" method="post">
    <div class="form-group">
        <label>Employee</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "Id", "Name"))">
            <option value="">-- Select Employee --</option>
        </select>
    </div>  

    <div class="form-group">
        <label>Date</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Check-In Time</label>
        <input asp-for="CheckInTime" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label>Check-Out Time</label>
        <input asp-for="CheckOutTime" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label>Approval Status</label>
        <input asp-for="ApprovalStatus" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>
