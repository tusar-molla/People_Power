@model People_Power.Models.Attendance

<h2 class="text-center text-primary mb-4">Create Attendance</h2>

<div class="card shadow-lg p-4 bg-white rounded">
    <form asp-action="AttdnceCreate" method="post" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-bold">Employee</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "Id", "Name"))" required>
                        <option value="">-- Select Employee --</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-bold">Date</label>
                    <input asp-for="Date" type="date" class="form-control" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-bold">Check-In Time</label>
                    <input asp-for="CheckInTime" type="time" class="form-control" required />
                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-bold">Check-Out Time</label>
                    <input asp-for="CheckOutTime" type="time" class="form-control" required />
                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label fw-bold">Approval Status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<ApprovalStatus>()" class="form-control" required>
                        <option value="">Select Status</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg shadow">Submit</button>
        </div>
    </form>
</div>
