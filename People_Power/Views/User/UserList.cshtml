@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <h2>User List</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Current Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Role?.Name</td>
                    <td>
                        <a href="@Url.Action("AssignRole", new { userId = user.Id })" class="btn btn-warning btn-sm">Assign Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
