@model People_Power.Models.Department

<div class="container mt-5">
    <h2 class="fw-bold mb-4">Delete Department</h2>

    <div class="alert alert-danger">
        <strong>Warning!</strong> Are you sure you want to delete the department "<strong>@Model.Name</strong>"?
        This action cannot be undone.
    </div>

    <form asp-action="DeptDelete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete Department
        </button>
        <a href="@Url.Action("DeptList", "Department")" class="btn btn-secondary ms-3">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </form>
</div>
