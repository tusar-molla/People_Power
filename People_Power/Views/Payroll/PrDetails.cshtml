@model People_Power.Models.Payroll
@{
    ViewData["Title"] = "Payroll Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Payroll for @Model.Employee?.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Basic Salary</dt>
        <dd class="col-sm-10">@Model.BasicSalary</dd>

        <dt class="col-sm-2">Bonus</dt>
        <dd class="col-sm-10">@Model.Bonus</dd>

        <dt class="col-sm-2">Deduction</dt>
        <dd class="col-sm-10">@Model.Deduction</dd>

        <dt class="col-sm-2">Total Salary</dt>
        <dd class="col-sm-10">@Model.TotalSalary</dd>

        <dt class="col-sm-2">Payroll Date</dt>
        <dd class="col-sm-10">@Model.PayrollDate.ToString("d")</dd>
    </dl>

    <a href="@Url.Action("PrList", "Payroll")" class="btn btn-secondary">Back to List</a>
</div>
