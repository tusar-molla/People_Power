@model People_Power.Models.Leave

<h2>Create Leave</h2>

<form asp-action="CreateLeave" method="post">
   
        <div class="form-group">
            <label asp-for="EmployeeId" class="form-label fw-bold">Employee</label>
            <select asp-for="EmployeeId" class="form-select rounded-pill" asp-items="ViewBag.Employees"></select>           
        </div>
  
    <div class="form-group">
        <label for="LeaveType">Leave Type</label>
        <select asp-for="LeaveType" class="form-control">
            <option value="Pending">Casual Leave</option>
            <option value="Approved">Annual Leave</option>
            <option value="Rejected">Sick Leave</option>
            <option value="Rejected">Marriage Leave</option>
            <option value="Rejected">Maternity Leave</option>
        </select>
    </div>
    <div class="form-group">
        <label for="LeaveStartDate">Leave Start Date</label>
        <input type="date" class="form-control" id="LeaveStartDate" name="LeaveStartDate" required />
    </div>
    <div class="form-group">
        <label for="LeaveEndDate">Leave End Date</label>
        <input type="date" class="form-control" id="LeaveEndDate" name="LeaveEndDate" required />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Status" class="form-control">
            <option value="Pending">Pending</option>
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Reason">Reason</label>
        <textarea class="form-control" id="Reason" name="Reason" required></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ApprovedById" class="form-label fw-bold">Approved By</label>
        <select asp-for="ApprovedById" class="form-select rounded-pill" asp-items="ViewBag.Users"></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("LeaveList")" class="btn btn-secondary">Cancel</a>
</form>
